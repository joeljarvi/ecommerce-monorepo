{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderItem": {
      "type": "component",
      "component": "shared.order-item",
      "repeatable": true
    },
    "total": {
      "type": "decimal"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "cancelled"
      ]
    }
  }
}
